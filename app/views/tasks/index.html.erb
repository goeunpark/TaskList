<div class="grid-container">

  <div class="left-column">
    <h1>task list</h1>

    <div class="new-task">
      <p>
        new task

      </p>
    </div>
  </div>

  <div class="content">
    <h2>Your Tasks</h2>

    <ul>
      <% @tasks.each do |task| %>

      <li>
        <%= task.action %>
        <%= link_to "(details)", task_path(task.id)  %>
        <br>
        task completed:
        <%= task.completed_date %>
      </li>

      <% end %>
    </ul>
  </div>

  <footer>
    why would you even steal this (c) ada dev academy
  </footer>

</div>
